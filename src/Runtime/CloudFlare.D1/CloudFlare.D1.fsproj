<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>CloudflareFS.D1</PackageId>
    <Version>0.1.0</Version>
    <Authors>CloudflareFS Contributors</Authors>
    <Description>F# bindings for Cloudflare D1 Database</Description>
    <PackageLicenseExpression>MIT OR Apache-2.0</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/yourusername/CloudflareFS</RepositoryUrl>
    <PackageTags>fsharp;cloudflare;d1;database;workers;fable</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Types.fs" />
    <Compile Include="Helpers.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Fable.Core" Version="4.3.0" />
  </ItemGroup>

</Project>